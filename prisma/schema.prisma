// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int           @id @default(autoincrement())
  email      String        @unique
  nickname   String?
  password   String
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  // Relaciones
  session   UserSession[]
  accounts   Account[]
}

model UserSession {
  id            Int      @id @default(autoincrement())
  tokenId       String
  refreshToken  String   @unique
  userId        Int
  deviceId      String?
  userAgent     String?
  ip            String?
  createdAt     DateTime @default(now())
  lastUsedAt    DateTime @updatedAt
  expiresAt     DateTime
  revoke        Boolean @default(false)
  replaceBy     String?
  
  user          User     @relation(fields: [userId], references: [id])
}

model Category {
  id         Int       @id @default(autoincrement())
  Isincome Boolean
  tipo       String    
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  accounts   Account[]
}

model Account {
  id         Int       @id @default(autoincrement())
  name       String?
  money      Float     @default(0)
  userId     Int
  categoryId Int
  createdAt  DateTime  @default(now())

  user       User      @relation(fields: [userId], references: [id])
  category   Category  @relation(fields: [categoryId], references: [id])
  tags       TagPocket[]
  reports    Report[]
}

model TagPocket {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  accountId   Int

  account     Account       @relation(fields: [accountId], references: [id])
  transactions Transaction[]
  goals       Goal[]
  chats       Chat[]
  notifications Notifications[]
}

model Transaction {
  id             Int       @id @default(autoincrement())
  amount         Float
  isIncome       Boolean
  transactionDate DateTime
  description    String?
  tagId          Int

  tag            TagPocket @relation(fields: [tagId], references: [id])
}

model Goal {
  id             Int        @id @default(autoincrement())
  description    String
  init_date      DateTime?
  final_date     DateTime?
  actual_progress Float?
  goalUnitId     Int
  tagId          Int?

  goalUnit       GoalUnit   @relation(fields: [goalUnitId], references: [id])
  tag            TagPocket? @relation(fields: [tagId], references: [id])
}

model GoalUnit {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  amount   Float

  goals    Goal[]
}

model Period {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  reports     Report[]
}

model Report {
  id         Int      @id @default(autoincrement())
  bills      Json
  accountId  Int
  periodId   Int

  account    Account @relation(fields: [accountId], references: [id])
  period     Period  @relation(fields: [periodId], references: [id])
}

model Chat {
  id          Int                  @id @default(autoincrement())
  tagPocketId Int
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  tagPocket   TagPocket            @relation(fields: [tagPocketId], references: [id])
  messages    Chat_recommendation[]
}

model Chat_recommendation {
  id              Int      @id @default(autoincrement())
  message_send    String
  answers_message String
  chatId          Int

  chat            Chat     @relation(fields: [chatId], references: [id])
}

model Notifications {
  id            Int     @id @default(autoincrement())
  title         String
  message       String
  tagPocketId   Int

  tagPocket     TagPocket @relation(fields: [tagPocketId], references: [id])

}
